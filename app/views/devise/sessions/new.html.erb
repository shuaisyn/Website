<h2>用户登录</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
 
 <%= f.input :email, label: '请输入登录邮箱' %>
 <%= f.input :password, label: '请输入密码', hint: '请确认大写字母锁定键已关闭' %>
 <%= f.input :remember_me, as: :boolean, label: '记住我'  %>

  <div class= "form-actions">
  	<p>  
  	</p>
  	<%= f.submit "登录", class: "btn btn-info"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
