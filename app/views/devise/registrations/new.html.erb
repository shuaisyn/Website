<h2>注册</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form_horizontal'}) do |f| %>
  <%= f.error_notification %>

<%= f.input :email, label: "账户名使用Email"%>
<%= f.input :password, label: "请输入密码"%>
<%= f.input :password_confirmation, label: "请再次输入密码"%>

  <div class="form-actions"><%= f.submit "注册", class: "btn btn-success"%></div>
<% end %>

<%= render "devise/shared/links" %>
